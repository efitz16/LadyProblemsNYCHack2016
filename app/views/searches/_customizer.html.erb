
<%= form_tag(searches_customize_path, method:'get', class: "col-sm-10 col-sm-offset-1") do  %>
	<%= hidden_field_tag :query , params[:search] %>
  <div id="insurance">
    <span>Only show companies with my insurance:</span>
  	<%= check_box_tag(:insurance, true) %>
  </div>

  <div id="price" class="selector" min=<%= @min_max[0] %> max=<%= @min_max[1] %> ></div>
  <span id="amounts"> </span>
  <%= hidden_field_tag "min-val", :min %>
  <%= hidden_field_tag "max-val", :max %>
  <div id="distance">
  	Close By? <%= check_box_tag(:distance, true) %>
  </div>
  <%= submit_tag :Change, class:'col-sm-2'%>
<% end %>
